{
    "name": "K8EksDemo",
    "description": "Demo template for AWS EKS deployment",
    "version": "1.0.0",
    "engine": "1.0.0",
    "release": "20241201",
    "requires": [],
    "stack": {
        "orchestrator": "Pulumi",
        "input": [
            {
                "type": "environment",
                "name": "PULUMI_CONFIG_PASSPHRASE"
            },
            {
                "type": "environment",
                "name": "PULUMI_BACKEND_URL"
            }
        ],
        "setup": [
            {
                "type": "environment",
                "name": "aws:region",
                "value": "AWS_REGION",
                "default": "us-east-1"
            },
            {
                "type": "environment",
                "name": "aws:accessKey",
                "value": "AWS_ACCESS_KEY_ID",
                "default": ""
            },
            {
                "type": "environment",
                "name": "aws:secretKey",
                "value": "AWS_SECRET_ACCESS_KEY",
                "default": ""
            }
        ],
        "components": [
            {
                "name": "EKS",
                "input": [],
                "output": [
                    {
                        "type": "reference",
                        "name": "kubeconfig",
                        "value": "kubeconfig",
                        "description": "Kubeconfig file for accessing the EKS cluster"
                    },
                    {
                        "type": "reference",
                        "name": "kubeconfigJson",
                        "value": "kubeconfigJson",
                        "description": "Kubeconfig JSON for accessing the EKS cluster"
                    }
                ],
                "setup": [
                    {
                        "type": "environment",
                        "name": "aws:accessKey",
                        "value": "AWS_ACCESS_KEY_ID"
                    },
                    {
                        "type": "environment",
                        "name": "aws:secretKey",
                        "value": "AWS_SECRET_ACCESS_KEY"
                    }
                ]
            }
        ]
    }
}