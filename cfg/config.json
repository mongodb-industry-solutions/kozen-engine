{
  "name": "kozen",
  "version": "1.0.0",
  "engine": ">=1.0.0",
  "description": "Default configuration for Kozen as Task Execution Framework",
  "modules": {
    "load": [
      {
        "name": "logger",
        "path": "../../../modules"
      },
      {
        "name": "help",
        "path": "../../../modules"
      },
      {
        "name": "cli",
        "path": "../../../modules"
      },
      {
        "name": "mcp",
        "path": "../../../modules"
      }
    ]
  },
  "dependencies": {
    "core:file": {
      "category": "core",
      "target": "FileService",
      "type": "class",
      "lifetime": "transient",
      "path": "../../services",
      "args": [
        {
          "extension": ".txt",
          "dir": "./docs/tools",
          "encoding": "utf-8"
        }
      ]
    }
  }
}