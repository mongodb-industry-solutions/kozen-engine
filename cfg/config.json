{
  "name": "kozen",
  "version": "1.0.0",
  "engine": ">=1.0.0",
  "description": "Default configuration for Kozen as Task Execution Framework",
  "modules": {
    "load": [
      {
        "name": "logger",
        "path": "../../../modules"
      },
      {
        "name": "secret",
        "path": "../../../modules"
      },
      {
        "name": "help",
        "path": "../../../modules"
      },
      {
        "name": "cli",
        "path": "../../../modules"
      },
      {
        "name": "mcp",
        "path": "../../../modules"
      }
    ]
  },
  "dependencies": {
    "core:components": {
      "category": "core",
      "path": "../../../components",
      "type": "auto",
      "lifetime": "singleton",
      "args": [
        {}
      ],
      "dependencies": [
        {
          "key": "assistant",
          "target": "IoC",
          "type": "ref"
        },
        {
          "key": "logger",
          "target": "logger:service",
          "type": "ref"
        }
      ]
    },
    "core:file": {
      "category": "core",
      "target": "FileService",
      "type": "class",
      "lifetime": "transient",
      "path": "../../services",
      "args": [
        {
          "extension": ".txt",
          "dir": "./docs/tools",
          "encoding": "utf-8"
        }
      ]
    },
    "core:processor": {
      "category": "core",
      "target": "ProcessorService",
      "type": "class",
      "lifetime": "singleton",
      "path": "../../services",
      "args": [
        {}
      ],
      "dependencies": [
        {
          "key": "srvSecret",
          "target": "secret:manager",
          "type": "ref"
        },
        {
          "key": "assistant",
          "target": "IoC",
          "type": "ref"
        },
        {
          "key": "logger",
          "target": "logger:service",
          "type": "ref"
        }
      ]
    }
  }
}