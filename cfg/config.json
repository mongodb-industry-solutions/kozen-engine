{
  "name": "kozen",
  "version": "1.0.0",
  "engine": ">=1.0.0",
  "description": "Default configuration for Kozen as Task Execution Framework",
  "modules": {
    "path": "../../../modules",
    "load": [
      "logger",
      "secret",
      "template",
      "pipeline",
      "rectification",
      "report",
      "help"
    ]
  },
  "dependencies": {
    "core:components": {
      "path": "../../../components",
      "type": "auto",
      "lifetime": "singleton",
      "args": [
        {}
      ],
      "dependencies": [
        {
          "key": "assistant",
          "target": "IoC",
          "type": "ref"
        },
        {
          "key": "logger",
          "target": "logger:service",
          "type": "ref"
        }
      ]
    },
    "core:file": {
      "target": "FileService",
      "type": "class",
      "lifetime": "transient",
      "path": "../../services",
      "args": [
        {
          "extension": ".txt",
          "dir": "./docs/tools",
          "encoding": "utf-8"
        }
      ]
    },
    "core:processor": {
      "target": "ProcessorService",
      "type": "class",
      "lifetime": "singleton",
      "path": "../../services",
      "args": [
        {}
      ],
      "dependencies": [
        {
          "key": "srvSecret",
          "target": "secret:manager",
          "type": "ref"
        },
        {
          "key": "assistant",
          "target": "IoC",
          "type": "ref"
        },
        {
          "key": "logger",
          "target": "logger:service",
          "type": "ref"
        }
      ]
    }
  }
}