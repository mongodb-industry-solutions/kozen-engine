{
    "name": "@mongodb-solution-assurance/kozen",
    "version": "1.0.5",
    "description": "Kozen Engine is a versatile Task Execution Framework for CLI apps, REST, AI MCP, IaC, CI/CD, and testing workflows",
    "main": "dist/bin/kozen.js",
    "types": "dist/src/index.d.ts",
    "bin": {
        "kozen": "./dist/bin/kozen.js",
        "pipeline": "./dist/bin/pipeline.js"
    },
    "files": [
        "dist/*",
        "LICENSE",
        "README.md"
    ],
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "build": "tsc && npm run copy:txt",
        "start": "node dist/bin/kozen.js",
        "help": "ts-node bin/kozen.ts --action=help",
        "dev": "ts-node bin/kozen.ts",
        "log": "ts-node bin/kozen.ts --action=logger:log",
        "secret": "ts-node bin/kozen.ts --module=secret",
        "lint": "tslint -p tsconfig.json",
        "clean": "rm -rf dist",
        "test:deploy": "ts-node bin/pipeline.ts --action=deploy",
        "test:validate": "ts-node bin/pipeline.ts --action=validate",
        "test:undeploy": "ts-node bin/pipeline.ts --action=undeploy",
        "test:status": "ts-node bin/pipeline.ts --action=status",
        "mcp:dev": "npx -y @modelcontextprotocol/inspector npx -y ts-node bin/kozen.ts --type=mcp",
        "mcp:start": "ts-node bin/kozen.ts --type=mcp",
        "copy:txt": "copyfiles -u 1 src/**/*.txt dist/src"
    },
    "keywords": [
        "iac",
        "infrastructure-as-code",
        "pulumi",
        "test",
        "mcp",
        "pipeline",
        "mongodb",
        "framework",
        "atlas",
        "kubernetes",
        "ops-manager",
        "cli"
    ],
    "author": "MDB SAT",
    "license": "LGPL-3.0-or-later",
    "devDependencies": {
        "@types/node": "^18.19.127",
        "copyfiles": "^2.4.1",
        "cross-env": "^7.0.3",
        "ts-node": "^10.9.0",
        "tslint": "^6.1.3",
        "typescript": "^5.0.0"
    },
    "dependencies": {
        "@aws-sdk/client-secrets-manager": "^3.840.0",
        "@modelcontextprotocol/sdk": "^1.18.0",
        "@mongodb-solution-assurance/iam-util": "^1.0.3",
        "@pulumi/aws": "^6.83.0",
        "@pulumi/awsx": "^3.0.0",
        "@pulumi/eks": "^4.0.0",
        "@pulumi/mongodbatlas": "^3.34.0",
        "@pulumi/pulumi": "^3.113.0",
        "awilix": "^8.0.1",
        "dotenv": "^16.0.3",
        "mongodb": "^6.17.0",
        "mongodb-client-encryption": "^6.4.0",
        "ora": "^8.2.0",
        "zod": "^3.25.76"
    },
    "engines": {
        "node": ">=16.0.0"
    }
}