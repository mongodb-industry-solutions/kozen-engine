{
  "name": "Simple Example",
  "description": "A simple example template with two basic components for testing the pipeline functionality",
  "version": "1.0.0",
  "engine": "1.0.0",
  "release": "20250127",
  "requires": [
    { "key": "ExampleSecret", "provider": "aws", "type": "secret" }
  ],
  "deploymentMode": "synchronous",
  "components": [
    {
      "name": "HelloWorld",
      "type": "HelloWorld",
      "region": "us-east-1",
      "config": {
        "message": "Hello from the first component!",
        "delay": 1000
      },
      "output": [
        { "name": "greeting", "description": "The greeting message from the component" }
      ]
    },
    {
      "name": "SimpleLogger",
      "type": "SimpleLogger",
      "region": "us-east-1",
      "config": {
        "logLevel": "info",
        "prefix": "PIPELINE",
        "messages": [
          "Starting simple deployment test",
          "Processing configuration",
          "Deployment completed successfully"
        ]
      },
      "input": [
        {
          "name": "greeting",
          "description": "Greeting message from previous component"
        }
      ],
      "output": [
        { "name": "logOutput", "description": "Log messages generated by the component" }
      ]
    }
  ]
} 