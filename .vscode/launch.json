{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "üõ†Ô∏è Develop",
      "runtimeExecutable": "npm",
      "console": "integratedTerminal",
      "runtimeArgs": [
        "run",
        "dev"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "üõ†Ô∏è MCP Develop",
      "runtimeExecutable": "npm",
      "console": "integratedTerminal",
      "runtimeArgs": [
        "run",
        "mcp:start",
        "--",
        "--moduleLoad=@mongodb-solution-assurance/kozen-trigger,@mongodb-solution-assurance/kozen-iam-rectification"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "üöÄ Test Deploy",
      "runtimeExecutable": "npm",
      "console": "integratedTerminal",
      "runtimeArgs": [
        "run",
        "test:deploy"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "üóëÔ∏è Test Undeploy",
      "runtimeExecutable": "npm",
      "console": "integratedTerminal",
      "runtimeArgs": [
        "run",
        "test:undeploy",
        "--",
        "--project=${input:projectId}",
        "--stack=${input:stackName}"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "‚úÖ Test Validate",
      "runtimeExecutable": "npm",
      "console": "integratedTerminal",
      "runtimeArgs": [
        "run",
        "test:validate"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "üîß Test Status",
      "runtimeExecutable": "npm",
      "console": "integratedTerminal",
      "runtimeArgs": [
        "run",
        "test:status"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "üìÅ Debug Current File",
      "program": "${file}",
      "skipFiles": [
        "<node_internals>/**",
        "**/node_modules/**"
      ],
      "runtimeArgs": [
        "-r",
        "ts-node/register"
      ],
      "env": {
        "NODE_ENV": "development"
      },
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "üõ†Ô∏è Run Secret",
      "runtimeExecutable": "npm",
      "console": "integratedTerminal",
      "runtimeArgs": [
        "run",
        "secret"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ]
    }
  ],
  "inputs": [
    {
      "id": "projectId",
      "type": "promptString",
      "description": "Pulumi project identifier (e.g., K2025080114570884)",
      "default": "K2025080114570884"
    },
    {
      "id": "stackName",
      "type": "promptString",
      "description": "Pulumi stack name (e.g., DEV)",
      "default": "DEV"
    }
  ]
}