{
    "servers": {
        "kozen": {
            "type": "stdio",
            "command": "npx",
            "args": [
                "-y",
                "ts-node",
                "bin/kozen.ts",
                "--type=mcp"
            ],
            "env": {
                "MDB_URI": "mongodb+srv://<user>:<pass>@<cluster>/<database>?retryWrites=true&w=majority&appName=<app>",
                "MDB_MASTER_KEY": "<masterkey>",
                "ATLAS_PROJECT_ID": "<projectid>",
                "ATLAS_PRIVATE_KEY": "<privatekey>",
                "ATLAS_PUBLIC_KEY": "<publickey>",
                "PULUMI_CONFIG_PASSPHRASE": "<passphrase>",
                "KOZEN_LOG_LEVEL": "NONE",
                "KOZEN_MODULE_LOAD": ""
            }
        }
    },
    "inputs": []
}